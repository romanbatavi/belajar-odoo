<odoo>
    <data>
        <record id="umroh_travel_view_tree" model="ir.ui.view">
            <field name="name">umroh.travel.tree</field>
            <field name="model">umroh.travel</field>
            <field name="arch" type="xml">
                <tree string="Course List">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Membuat View Form Course -->
        <record id="umroh_travel_view_form" model="ir.ui.view">
            <field name="name">umroh.travel.form</field>
            <field name="model">umroh.travel</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Keterangan">
                                <group>
                                    <field name="description"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Membuat Action/Event Course -->
        <record id="umroh_travel_action" model="ir.actions.act_window">
            <field name="name">Umroh</field>
            <field name="res_model">umroh.travel</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p name="o_view_nocontent_smiling_face">
            UMROH TRAVEL KOSONG
                </p>
            </field>
        </record>

        <!-- Membuat Menu Dashboard -->
        <menuitem id="menu_dashboard_training_odoo2" name="UMROH TRAVEL"/>

        <!-- Membuat Menu Bar Training -->
        <menuitem id="menu_bar_training_odoo2" name="Master Data" parent="menu_dashboard_training_odoo2"/>

        <!-- Membuat Menu Item Course -->
        <menuitem id="menu_item_umroh_travel" name="Produk" parent="menu_bar_training_odoo2" action="umroh_travel_action"/>
    </data>
</odoo>
